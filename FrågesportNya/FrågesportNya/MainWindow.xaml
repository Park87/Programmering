<Window x:Class="FrågesportNya.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrågesportNya"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
        <StackPanel x:Name="stack" Background="LightGreen">

            <TextBlock Name="textOne" FontSize="50" Margin="10" Padding="40" Text="Frågesport" HorizontalAlignment="Center"/>
        <Button Name="Start" FontSize="25" Margin="10"  HorizontalAlignment="Center" Content="Start" Click="Start_Click"/>
        <TextBlock Name="QuestionOne" FontSize="50" Margin="10" Padding="40" Text="Vad är 4+4?" HorizontalAlignment="Center" Visibility="Collapsed"/>
        <WrapPanel Name="FirstQuestion"  HorizontalAlignment="Center" Margin="-20" Visibility="Collapsed">
         <Button Name="Answer1" FontSize="25" Margin="10" HorizontalAlignment="Center" Content="9" Click="Answer1_Click"/>
         <Button Name="Answer2" FontSize="25" Margin="10" HorizontalAlignment="Left" Content="8" Click="Answer2_Click"/>
         <Button Name="Answer3" FontSize="25" Margin="10" HorizontalAlignment="Right" Content="25" Click="Answer3_Click"/>
        </WrapPanel>


    </StackPanel>
   
</Window>
